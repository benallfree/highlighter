{
	"manifest_version": 2,
	"name": "Highlighter",
	"version": "1.4",

	"background": {
		"scripts": ["storage.js", "eventPage.js"],
		"persistent": false
	},

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["libs/hilitor.js", "highlighter.js"]
		}
	], 

	"browser_action": {
		"default_icon": {
			"19": "assets/gray.png"
		},
		"default_title": "Highlighter",
		"default_popup": "popup/popup.html"
	}, 

	"permissions": [
		"contextMenus"
	]
}
